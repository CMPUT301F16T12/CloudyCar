<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <com.cloudycrew.cloudycar.users.UsernameTextView
            android:id="@+id/driver_username"
            android:textSize="16dp"
            android:text="Snack"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/confirm_driver_button"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/confirm_driver_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            style="?attr/borderlessButtonStyle"
            android:background="@drawable/confirm_button_background"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"
            android:textColor="@drawable/confirm_button_text"
            android:text="Confirm Driver"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF" />

</LinearLayout>